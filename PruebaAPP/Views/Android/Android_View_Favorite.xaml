<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PruebaAPP.Views.Android.ViewModels"
             xmlns:md="clr-namespace:PruebaAPP.Objetos.Models"
             x:DataType="vm:AndroidPropertyViewModel"
             x:Class="PruebaAPP.Views.Android.Android_View_Favorite">

    <Grid RowDefinitions="Auto,1,*" Margin="0,10,0,0" RowSpacing="10">
        
        <!-- Titulo -->
        <Grid ColumnDefinitions="30,*,44" Margin="15,0">
            
            <!-- Icono -->
            <Label Grid.Column="0" Text="&#xe87d;" Margin="0,2,5,0" FontSize="25" FontFamily="MaterialIconsOutlinedRegular" TextColor="{StaticResource foreg_night_1}"/>

            <!-- Informacion -->
            <VerticalStackLayout Grid.Column="1">
                <Label Text="Mi lista de favoritos" TextColor="{StaticResource foreg_night_2}"/>
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding Favoritos.Count}" TextColor="{StaticResource foreg_night_1}"/>
                            <Span Text=" Canciones" TextColor="{StaticResource foreg_night_1}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>

            <!-- Controles -->
            <Button Grid.Column="2" Text="&#xe5d4;" FontSize="20" FontFamily="MaterialIconsOutlinedRegular" Padding="0" TextColor="{StaticResource foreg_night_2}" BackgroundColor="Transparent"/>

        </Grid>
        
        <!-- Separador -->
        <Rectangle Grid.Row="1" HeightRequest="2" Fill="{StaticResource backg_night_2}"/>

        <!-- Listado -->
        <CollectionView Grid.Row="2" x:Name="RootView" ItemsSource="{Binding Favoritos}" ClassId="111" SelectionMode="Single" ItemsUpdatingScrollMode="KeepScrollOffset" ItemSizingStrategy="MeasureFirstItem" SelectionChanged="Click_SelectItemsPlay">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="md:Favorite">
                    <Grid ColumnDefinitions="Auto,*,Auto" Padding="15,5">

                        <!-- Cover -->
                        <Border Grid.Column="0" Margin="0,0,10,0" StrokeThickness="0" WidthRequest="50" HeightRequest="50" VerticalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Grid>

                                <!-- Imagen -->
                                <Image x:Name="MainImage" Aspect="AspectFill">
                                    <Image.Source>
                                        <UriImageSource Uri="{Binding Thumbnails}" CacheValidity="7.00:00:00" CachingEnabled="True" />
                                    </Image.Source>
                                </Image>

                                <!-- Loader mientras carga -->
                                <ActivityIndicator WidthRequest="40" HeightRequest="40" 
                                                       IsRunning="{Binding Source={x:Reference MainImage}, Path=IsLoading}" 
                                                       Color="{StaticResource foreg_night_2}" 
                                                       IsVisible="{Binding Source={x:Reference MainImage}, Path=IsLoading}" />

                                <!-- Covertura -->
                                <Grid Margin="-1" IsVisible="{Binding IsPlay}">
                                    <Rectangle Fill="{StaticResource backg_night_2}" Opacity="0.6"/>
                                    <Label Text="&#xe037;" FontSize="25" FontFamily="MaterialIconsRegular" TextColor="{StaticResource foreg_night_2}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Informacion -->
                        <VerticalStackLayout Grid.Column="1" Margin="0,0,10,0" VerticalOptions="Center">
                            
                            <!-- Titulo de la cancion -->
                            <Label Text="{Binding Title, Converter={StaticResource TextNormalizer}}"   
                                   MaxLines="1"
                                   LineBreakMode="TailTruncation" 
                                   HorizontalTextAlignment="Justify">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="TextColor" Value="{StaticResource foreg_night_2}"/>
                                        <Style.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding IsPlay}" Value="True">
                                                <Setter Property="TextColor" Value="{StaticResource foreg_night_0}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>

                            <!-- Informacion basica -->
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" Text="{Binding Author, Converter={StaticResource TextNormalizer}}"   TextColor="{StaticResource foreg_night_1}"/>
                                <Label Grid.Column="1" Text="{Binding Duracion, Converter={StaticResource TimeSpanFormat}}" TextColor="{StaticResource foreg_night_1}"/>
                            </Grid>
                            
                        </VerticalStackLayout>

                        <!-- Icono de eliminar -->
                        <Button Grid.Column="2" WidthRequest="40" HeightRequest="40" Padding="0"
                                    Text="&#xe5d4;" 
                                    FontSize="20" 
                                    FontFamily="MaterialIconsRegular" 
                                    TextColor="{StaticResource foreg_night_2}" 
                                    BackgroundColor="Transparent"
                                    VerticalOptions="Start"
                                    Clicked="Click_SelectedItemsMenu">
                        </Button>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </Grid>
</ContentView>
