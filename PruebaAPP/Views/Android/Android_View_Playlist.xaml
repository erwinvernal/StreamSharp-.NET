<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pl="clr-namespace:PruebaAPP.Objetos.Models"
             xmlns:vm="clr-namespace:PruebaAPP.Views.Android.ViewModels"
             x:DataType="vm:AndroidPropertyViewModel"
             x:Class="PruebaAPP.Views.Android.Android_View_Playlist">

    <Grid RowDefinitions="Auto,Auto,*">
        
        <!-- Titulo -->
        <HorizontalStackLayout Grid.Row="0" Margin="10,10,20,10">
            <Label Text="&#xe03d;" FontSize="30" FontFamily="MaterialIconsOutlinedRegular" TextColor="{StaticResource foreg_night_1}"/>
            <VerticalStackLayout Margin="10,0,0,0">
                <Label Text="{Binding SelectedPlaylist.Title, TargetNullValue='Sin playlist activa'}" TextColor="{StaticResource foreg_night_2}"/>
                <HorizontalStackLayout>
                    <Label Text="{Binding SelectedPlaylist.Items.Count, TargetNullValue='0'}" TextColor="{StaticResource foreg_night_1}"/>
                    <Label Text=" Canciones" TextColor="{StaticResource foreg_night_1}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </HorizontalStackLayout>
        
        <!-- Controles -->
        <Border Grid.Row="1" Margin="10" HeightRequest="40" IsVisible="Collapse">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="25"/>
            </Border.StrokeShape>
            <Button Text="Reproducir todo" TextColor="{StaticResource foreg_night_2}" Background="{StaticResource backg_night_0}"/>
        </Border>

        <!-- Lista de canciones -->
        <CollectionView Grid.Row="2" ItemsSource="{Binding SelectedPlaylist.Items}" SelectionMode="Single" SelectionChanged="Click_PlayPlaylist">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid x:DataType="pl:Favorite"  Padding="15,5" ColumnDefinitions="Auto,*,Auto">
                        
                        <!-- Cover -->
                        <Border Grid.Column="0" Margin="0,0,10,0" StrokeThickness="0" WidthRequest="50" HeightRequest="50" VerticalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Grid>

                                <!-- Imagen -->
                                <Image x:Name="MainImage" Aspect="AspectFill">
                                    <Image.Source>
                                        <UriImageSource Uri="{Binding Thumbnails}" CacheValidity="7.00:00:00" CachingEnabled="True" />
                                    </Image.Source>
                                </Image>

                                <!-- Play -->
                                <Grid Margin="-1">
                                    <Rectangle Opacity="0.7" Fill="{StaticResource backg_night_0}"/>
                                    <Label Text="&#xe037;" FontSize="30" FontFamily="MaterialIconsRegular" TextColor="{StaticResource foreg_night_2}" VerticalOptions="Center" HorizontalOptions="Center"/>
                                    
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="IsVisible" Value="Collapse"/>
                                            <Style.Triggers>
                                                <DataTrigger TargetType="Grid" Binding="{Binding IsPlay}" Value="1">
                                                    <Setter Property="IsVisible" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                </Grid>

                                <!-- Loader mientras carga -->
                                <ActivityIndicator WidthRequest="50" HeightRequest="50"
                                                   IsRunning="{Binding Source={x:Reference MainImage}, Path=IsLoading}" 
                                                   Color="{StaticResource foreg_night_2}" 
                                                   IsVisible="{Binding Source={x:Reference MainImage}, Path=IsLoading}" />

                            </Grid>
                        </Border>

                        <!-- Informacion -->
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Grid.Column="0" LineBreakMode="TailTruncation">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="Text" Value="{Binding Title}"/>
                                        <Setter Property="TextColor" Value="{StaticResource foreg_night_2}"/>
                                        <Style.Triggers>    
                                            <DataTrigger TargetType="Label" Binding="{Binding IsPlay}" Value="1">
                                                <Setter Property="TextColor" Value="{StaticResource foreg_night_0}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="{Binding Author}" TextColor="{StaticResource foreg_night_1}" MaxLines="2" LineBreakMode="TailTruncation"/>
                                <Label Grid.Column="1" Text="{Binding Duracion}" TextColor="{StaticResource foreg_night_2}"/>
                            </Grid>
                        </VerticalStackLayout>
                        
                        <!-- Control de quitar -->
                        <Button Grid.Column="2" 
                                    Text="&#xe872;" 
                                    FontSize="24" 
                                    FontFamily="MaterialIconsRegular" 
                                    TextColor="{StaticResource foreg_night_2}" 
                                    BackgroundColor="Transparent"
                                    Clicked="Click_Delete"/>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </Grid>
</ContentView>
