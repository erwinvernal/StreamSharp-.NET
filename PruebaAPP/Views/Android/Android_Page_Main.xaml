<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:local="clr-namespace:PruebaAPP"
             x:Class="PruebaAPP.Views.Android.Android_Page_Main"
             Title="Android_Page_Main">

    <Grid RowDefinitions="*,1,Auto" RowSpacing="10" >
        
        <!-- Contenido -->
        <Grid Margin="10" RowDefinitions="Auto,*" RowSpacing="10">
            
            <!-- Buscar -->
            <Border Grid.Row="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25"/>
                </Border.StrokeShape>
                <Grid ColumnDefinitions="*,1,70">
                    
                    <!-- Campo -->
                    <Entry Grid.Column="0" x:Name="txt_search" Margin="20,0,10,0" Placeholder="Buscar" BackgroundColor="Transparent" ReturnType="Search"/>
                    
                    <!-- Separador -->
                    <Rectangle Grid.Column="1" WidthRequest="1" Margin="10" Fill="Gray"/>
                    
                    <!-- Boton -->
                    <ImageButton Grid.Column="2" Padding="0,0" Margin="0,0,0,0" Source="play.png" Clicked="Click_Search"/>
                    
                </Grid>
            </Border>
            
            <!-- Items -->
            <CollectionView Grid.Row="1" ItemsSource="{Binding ListItems}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" StrokeThickness="0">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnBorderTapped" />
                            </Border.GestureRecognizers>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Normal" />
                                    <VisualState Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="Background" Value="Gray"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <HorizontalStackLayout Spacing="10">
                                <Border WidthRequest="70" HeightRequest="40">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>
                                    <Image Source="{Binding Thumbnails[2].Url}" Aspect="AspectFill"/>
                                </Border>
                                <Label VerticalOptions="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Title, Mode=OneWay}" FontSize="14"/>
                                            <Span Text="&#10;"/>
                                            <Span Text="{Binding Author.ChannelTitle, Mode=OneWay}" FontSize="12"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </HorizontalStackLayout>
                        </Border>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Media -->
            <toolkit:MediaElement HeightRequest="150" x:Name="MediaP" IsVisible="Collapse"/>
            
        </Grid>
        
        <!-- Separador -->
        <Rectangle Grid.Row="1" HeightRequest="1" Fill="Gray"/>
        
        <!-- Controles -->
        <Grid Grid.Row="2" RowDefinitions="*,Auto" Margin="10" RowSpacing="10">
            
            <!-- Informacion -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto, Auto, *" ColumnSpacing="10">
                
                <!-- Cover -->
                <Border Grid.Column="0" WidthRequest="50">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Image Source="splash.png"/>
                </Border>
                
                <!-- Iformacion -->
                <StackLayout Grid.Column="1">
                    <Label Text="Nombre Cancion"/>
                    <Label Text="Artista"/>
                </StackLayout>
                
                <!-- Controles-->
                <StackLayout Grid.Column="2" Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="Center">
                    <Border StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="100"/>
                        </Border.StrokeShape>
                        <ImageButton WidthRequest="25" HeightRequest="25" Source="skipprevious.png"/>
                    </Border>
                    <Border StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="100"/>
                        </Border.StrokeShape>
                        <ImageButton WidthRequest="25" HeightRequest="25" Source="play.png"/>
                    </Border>

                </StackLayout>
            </Grid>
            
            <!-- Barra de progreso -->
            <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto">
                
                <!-- Current Time -->
                <Label Grid.Column="0" Text="00:00:00"/>
                
                <!-- Bar Progress -->
                <ProgressBar Grid.Column="1" HeightRequest="5" Margin="10,0" Progress="0.5"/>
                
                <!-- Total Time -->
                <Label Grid.Column="2" Text="00:00:00"/>
                
            </Grid>
            
        </Grid>
        
    </Grid>
</ContentPage>