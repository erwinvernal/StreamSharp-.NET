<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:local="clr-namespace:PruebaAPP.Controls"
             x:Class="PruebaAPP.Views.Android.Android_Page_Main"
             Title="Android_Page_Main">

    <Grid RowDefinitions="*,Auto,Auto" RowSpacing="10" >
        
        <!-- Contenido -->
        <Grid Grid.Row="0" Margin="0" RowDefinitions="Auto,*" RowSpacing="10">
            
            <!-- Buscar -->
            <Border Grid.Row="0" Margin="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25"/>
                </Border.StrokeShape>
                <Grid ColumnDefinitions="*,1,70">
                    <local:EntrySB Grid.Column="0" Text="{Binding SearchText}" Margin="20,0,10,0" Placeholder="Buscar artista / canciÃ³n" ClearButtonVisibility="WhileEditing" ReturnType="Search" ReturnCommand="{Binding SearchCommand}"/>
                    <Rectangle Grid.Column="1" WidthRequest="1" Margin="10" Fill="Gray"/>
                    <ImageButton Grid.Column="2" Padding="0" Margin="0" Source="play.png" Command="{Binding SearchCommand}"/>
                </Grid>
            </Border>

            <!-- Items -->
            <ContentView Grid.Row="1" x:Name="ModuleContainer"/>
            
            <!-- Reprocutor -->
            <toolkit:MediaElement x:Name="PlayerM" IsVisible="False" MediaOpened="MediaOpen_PlayerM" MediaEnded="MediaEnded_PlayerM"/>
            
        </Grid>

        <!-- Separador -->
        <Rectangle Grid.Row="1" HeightRequest="2" Fill="Gray"/>
        
        <!-- Controles -->
        <Grid Grid.Row="2" RowDefinitions="*,Auto" Margin="10" RowSpacing="10">
            
            <!-- Informacion -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto, *" ColumnSpacing="15">
                
                <!-- Cover -->
                <Border Grid.Column="0" WidthRequest="50" HeightRequest="50">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Image Aspect="AspectFill"  Source="{Binding Thumbnails}"/>
                </Border>
                
                <!-- Iformacion -->
                <StackLayout Grid.Column="1" VerticalOptions="Center">
                    <Label Text="{Binding TitleSong}"/>
                    <Label Text="{Binding Channel}" TextColor="Gray"/>
                </StackLayout>
                
            </Grid>
            
            <!-- Barra de progreso -->
            <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto">
                
                <!-- Current Time -->
                <Label Grid.Column="0" Text="{Binding CurrentTime, StringFormat='{0:hh\\:mm\\:ss}', TargetNullValue='00:00'}"/>
                
                <!-- Bar Progress -->
                <ProgressBar Grid.Column="1" HeightRequest="6" Margin="10,0" Progress="{Binding ProgressTime}" ProgressColor="Green"/>
                
                <!-- Total Time -->
                <Label Grid.Column="2" Text="{Binding TotalTime, StringFormat='{0:hh\\:mm\\:ss}', TargetNullValue='00:00'}"/>
                
            </Grid>
            
        </Grid>
        
    </Grid>
</ContentPage>