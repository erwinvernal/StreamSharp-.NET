<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaAPP.Views.Android.Android_View_Channel">

    <ScrollView>
        <Grid Margin="10,10,10,0" RowDefinitions="90,Auto,Auto,Auto,Auto" RowSpacing="10">

            <!-- Imagen de perfil -->
            <Border Grid.Row="0" Margin="1,0" StrokeThickness="0" BackgroundColor="{StaticResource foreg_night_2}">
                <Border.StrokeShape>
                    <RoundRectangle Margin="0,0" StrokeThickness="0" CornerRadius="10"/>
                </Border.StrokeShape>
                <Image Aspect="AspectFill" Source="dotnet_bot.png"/>
            </Border>

            <!-- -->
            <Grid Grid.Row="1" RowDefinitions="*,Auto,Auto" ColumnDefinitions="Auto,*" >

                <!-- Imagen de perfil -->
                <Border Grid.Column="0" WidthRequest="60" HeightRequest="60" Margin="0,0,20,0" StrokeShape="Ellipse" StrokeThickness="0">
                    <Image Aspect="AspectFill" Source="dotnet_bot.png"/>
                </Border>

                <!-- Informacion -->
                <StackLayout Grid.Column="1" VerticalOptions="Center">
                    <Label Text="Nombre del canal" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource foreg_night_2}"/>
                    <Label Text="Nombre del canal" FontSize="12" FontAttributes="None" TextColor="{StaticResource foreg_night_1}"/>
                </StackLayout>

                <!-- Descripcion -->
                <Label Grid.Row="1" Grid.ColumnSpan="2" Margin="0,5,0,0" Text="asdasdasd" FontSize="12" TextColor="{StaticResource foreg_night_1}"/>

                <!-- Button -->
                <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,0" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Button Text="Agregar a favorito" TextColor="Black"  BackgroundColor="{StaticResource foreg_night_2}"/>
                </Border>
            </Grid>


            <!-- Lista de audios -->
            <StackLayout Grid.Row="3" Margin="10,0,10,0">
                <Label Text="PlayList" FontSize="16" TextColor="{StaticResource foreg_night_2}"/>
                <HorizontalStackLayout Margin="-5,10,0,0" Spacing="10">
                    <Border WidthRequest="100" HeightRequest="100">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                    </Border>
                    <Border WidthRequest="100" HeightRequest="100">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                    </Border>

                </HorizontalStackLayout>
            </StackLayout>

            <!-- Lista de audios -->
            <StackLayout Grid.Row="4" Margin="10,10,10,10">
                <Label Text="PlayList" FontSize="16" TextColor="{StaticResource foreg_night_2}"/>
                <HorizontalStackLayout Margin="-5,10,0,0" Spacing="10">
                    <Border WidthRequest="100" HeightRequest="100">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                    </Border>
                    <Border WidthRequest="100" HeightRequest="100">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                    </Border>

                </HorizontalStackLayout>
            </StackLayout>

        </Grid>
    </ScrollView>
</ContentView>
