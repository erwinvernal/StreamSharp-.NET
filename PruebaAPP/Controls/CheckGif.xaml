<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             xmlns:i="clr-namespace:PruebaAPP.Controls"
             x:Class="PruebaAPP.Controls.CheckGif">

    <Grid>
        <skia:SKLottieView x:Name="AnimationLottie" Progress="00:00:00" Source="like.json" RepeatCount="1" WidthRequest="100" IsAnimationEnabled="False" HeightRequest="100" AnimationCompleted="AnimationLottie_AnimationCompleted">
            <skia:SKLottieView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnGifTapped"/>
            </skia:SKLottieView.GestureRecognizers>
        </skia:SKLottieView>
    </Grid>
</ContentView>
