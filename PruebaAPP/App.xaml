<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:PruebaAPP.Converters"
             xmlns:local="clr-namespace:PruebaAPP"
             x:Class="PruebaAPP.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- Carga de archivos -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Convertidores -->
            <cv:TimeSpanFormatConverter x:Key="TimeSpanFormat"/>
            <cv:TextNormalizerConverter x:Key="TextNormalizer"/>
            <cv:GreaterThanConverter    x:Key="GreaterThan"/>
            <cv:TimeSpanToSecondsConverter    x:Key="TimeSpanToSeconds"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
